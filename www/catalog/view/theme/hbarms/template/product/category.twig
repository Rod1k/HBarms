{{ header }}
<div id="product-category" class="container">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }} category-hbarms">
      <h2>{{ heading_title }}</h2>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
      {{ content_top }}

      {% if categories %}
      <div class="grid-category">
        <div class="row">
          <div class="col-sm-12">
            <div class="categories-grid">
                <div class="grid-category-parents">
                {% for category in categories %}
                  <div class="grid-category-child">
                    <div class="children-img-block"><img src="{{ category.image }}" alt=""></div>
                    <a class="name-category-child" href="{{ category.href }}">{{ category.name }}</a>
                    <a class="detailed-link-grid-child-category" href="#">{{ category.short_description }}</a>

                    <!-- <p class="filter-category"><a href="#">rifile</a> / <a href="#">pistol</a></p> -->

                  </div>
                {% endfor %}
                </div>
            </div>  
          </div>
        </div>
      </div>
      {% endif %}

      
      {% if products %}
      <div class="row view-product-hbarms">
        <div class="col-sm-12 text-right hidden-xs">
          <div class="btn-group btn-group-sm">
            <button type="button" id="grid-view" class="btn btn-link" data-toggle="tooltip" title="{{ button_grid }}"><i class="fa fa-th"></i></button>
            <button type="button" id="list-view" class="btn btn-link" data-toggle="tooltip" title="{{ button_list }}"><i class="fa fa-th-list"></i></button>
          </div>
          <hr>
        </div>
      </div>
      
      <div class="row product-hbarms"> 
        {% for product in products %}
        <div class="product-layout product-grid col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <div class="product-thumb">
            <div class="image"><a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a></div>
            <div>
              <div class="caption">
                <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
                <p>{{ product.description }}</p>
              </div>
              
            </div>
          </div>
        </div>
        {% endfor %} 
      </div>

      <div class="row">
        <div class="col-sm-6 text-left pagination-hbarms">{{ pagination }}</div>
        <div class="col-sm-6 text-right result-hbarms">{{ results }}</div>
      </div>
      <br>
      {% endif %}
      

      {% if not categories and not products %}
      <p style="margin-top:50px">{{ text_empty }}</p>
      <div class="buttons">
        <!-- <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div> -->
      </div>
      {% endif %}
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
<link href="catalog\view\theme\hbarms\stylesheet\category.css" type="text/css" rel="stylesheet" media="screen" />
{{ footer }} 
